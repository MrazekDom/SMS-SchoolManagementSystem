@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
<h3 style="background:#D3D3D3;">Roles:</h3>
    <hr />
<a asp-action="Create" class="btn btn-success" style="margin-bottom:15px;">Create a Role</a>
<table class="table table-sm table-bordered table-bordered" style="border:solid black 4px;background:#E5E7EB;width:max-content;margin-left:auto;margin-right:auto;">
    <tr>
        <th>Name</th>
        <th>Update</th>
        <th>Delete</th>
        <th>ID</th>
    </tr>
    @foreach (var role in Model) {
        <tr>
            <td>@role.Name</td>
            <td><a class="btn btn-warning" asp-action="Edit" asp-route-id="@role.Id" style="border:solid 1px white;">Edit</a></td>         @*dva ruzne zpusoby vytvoreni tlacitka*@
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-danger" style="border:solid 1px white;">
                        Delete
                    </button>
                </form>
            </td>
            <td>@role.Id</td>
        </tr>
    }
</table>


