@{
	ViewData["Title"] = "Students";
}
@model IEnumerable<Student>
<body>
	<h3>List of students:</h3>
<div class="container" style="display:flex;flex-direction:column;gap:15px;padding:0;align-content:center;">
		<hr/>
		<div>
			<a class="btn btn-success" asp-action="Create" style="margin-bottom:15px;">Create a new student</a>
		</div>

		<form method="post" enctype="multipart/form-data" asp-controller="FileUpload" asp-action="Upload">
			<div class="form-group" style="margin-bottom:15px;">
				<input type="file" name="file" />			@* Pokud se parametr jmenuje file, musi i name inputu byt file*@
				<input type="submit" value="Upload" />										
			</div>
		</form>
</div>

	<table class="table table-bordered table-sm" style="border:solid black 4px;background:#E5E7EB;width:max-content;margin-top:15px;margin-left:auto;margin-right:auto;">
		<tr>
			<th>Name</th>
			<th>Last Name</th>
			<th>Id</th>
			<th>Date of Birth</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	@foreach (var student in Model){
		<tr>
			<td>@student.FirstName</td>
			<td>@student.LastName</td>
			<td>@student.Id</td>
			<td>@student.DateOfBirth.ToShortDateString()</td>
				<td><a class="btn btn-warning" asp-action="Edit" asp-route-id="@student.Id" style="border:solid 1px white;">Edit</a></td>
			<td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@student.Id" style="border:solid 1px white;">Delete</a></td>
		</tr>
	}
	</table>
</body>
