@using SchoolManagementSystem.ViewModels;
@model LoginVM
<div class="text-center">
    <h1 class="display-4">Welcome to our Student-Administration WebPage</h1>
    <img src="~/images/631.jpg" alt="a stack of school books" style="max-width:100%; height:auto; border:solid white; border-radius:15%;" /> @*responzivni obrazek*@
</div>
<h1>Please, log-in.</h1>
<div class="text-danger" asp-validation-summary="All"></div>        @*errory pri spatnem zadani jemna, hesla...nahore, cervene*@
<form asp-action="Login" method="post">
    <input type="hidden" asp-for="returnUrl" />         @*schovany returnUrl, nejde videt*@
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        Remember me? <input type="checkbox" asp-for="Remember" />
    </div>
    <button class="btn btn-primary" type="submit">Log In</button>
</form>


