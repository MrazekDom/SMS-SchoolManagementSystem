@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "READ USER";
}
<h3 style="background:#D3D3D3;">List of all Users:</h3>
<hr/ style="color:black">
@*tlačítko pro vytvoření nového uživatele*@
<a asp-action="Create" class="btn btn-success" style="margin-bottom:15px;">Create a User</a>
@*tabulka bude mít vyznačené okraje*@
<table class="table table-sm table-bordered" style="border:solid black 4px;background:#E5E7EB;width:max-content;margin-left:auto;margin-right:auto;">
    @*definice prvního řádku tabulky s nadpisy sloupců (budou tučně)*@
    @*<tr> = table row*@
    <tr>
        @*<th> = table header*@
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Update</th>
        <th>Delete</th>
        <th>Connect Students</th>
    </tr>
    @*rozdělení vlastností uživatele do jednotlivých buněk tabulky , schema table headeru - id, name,
    email*@
    @foreach (AppUser user in Model) {
        <tr>
            <td>@user.Id</td> @*<td> = table data*@
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@user.Id" style="border:solid 1px white;"> Edit</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-danger" style="border:solid 1px white;">
                        Delete
                    </button>
                </form>
            </td>
            <td>
                <div class="form-group">
                    <a class="btn btn-primary" asp-action="ConnectStudents" asp-route-id="@user.Id" style="border:solid 1px white;">Edit connected students</a>
                </div>
            </td>
        </tr>
    }
</table>

